	journal = {Journal of Geophysical Research: Space Physics},
	author = {Tsyganenko, N. A. and Mukai, T.},
	year = {2003},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1029/2002JA009707},
	keywords = {density, ion pressure, modeling, plasma sheet, solar wind, temperature},
