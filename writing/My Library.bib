	file = {Dougherty et al. - 1961 - A theory of incoherent scattering of radio waves b.pdf:/Users/ost051/Documents/Zotero/storage/9G6U9SKC/Dougherty et al. - 1961 - A theory of incoherent scattering of radio waves b.pdf:application/pdf},
}

