	keywords = {aurora, electron energy, electron precipitation, inversion techniques, magnetosphere-ionosphere coupling, tomography (optics)},
	pages = {3672--3691},
	file = {Full Text PDF:/Users/ost051/Documents/Zotero/storage/M4QIIE8N/Simon Wedlund et al. - 2013 - Estimating energy spectra of electron precipitatio.pdf:application/pdf;Snapshot:/Users/ost051/Documents/Zotero/storage/D68XDG77/jgra.html:text/html},
